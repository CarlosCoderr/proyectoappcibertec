<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.Balance" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores de la app -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorPrimaryContainer">@color/light_blue</item>
        <item name="android:statusBarColor">@color/blue</item>

        <item name="textInputStyle">@style/TIL_Balance</item>
        <item name="android:editTextStyle">@style/Input_Balance</item>

    </style>

    <style name="Theme.Balance" parent="Base.Theme.Balance" />

    <style name="TIL_Balance" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="shapeAppearance">@style/TIL_Shape</item>
        <item name="boxStrokeColor">@color/blue</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="hintTextColor">@color/gray</item>
        <item name="boxStrokeErrorColor">@color/error_red</item>
    </style>

    <style name="TIL_Shape" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="Input_Balance" parent="Widget.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="Button_Balance_Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Button_Balance_Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/light_blue</item>
        <item name="strokeWidth">1dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
